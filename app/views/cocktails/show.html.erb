<div class="container">
<% if @cocktail.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>');">
    <div class="container">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://www.jamesgriffinpub.ie/wp-content/uploads/2013/09/cocktails.jpg);">
    <div class="container">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
<% end %>

<div class="card-show">
  <div id="doses-card">
    <% if @cocktail.doses.exists? %>
      <h4>This drank is made with:</h4>
      <% @cocktail.doses.each do |d| %>
        <ul id="dose-list">
          <li id="dose"><h5><%= d.description %> of <%= d.ingredient.name %></h5> <h6><%= link_to "Delete this ingredient", dose_path(d), method: :delete, data: { confirm: "Are you sure?" } %></h6></li>
        </ul>
      <% end %>
    <% else %>
      <h4>No ingredients listed. Wanna add one?</h4>
    <% end %>
  </div>
  <ul>
    <li>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
    </li>
    <li>
      <%= link_to "Back to all cocktails", root_path %>
    </li>
  </ul>
</div>
</div>
