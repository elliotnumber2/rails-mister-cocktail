<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |d| %>
  <h5><%= d.description %> of <%= d.ingredient.name %><%= link_to "Delete", dose_path(d), method: :delete, data: { confirm: "Are you sure?" } %></h5>
<% end %>

<h5><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></h5>

<h5><%= link_to "Back to all cocktails", cocktails_path %></h5>

